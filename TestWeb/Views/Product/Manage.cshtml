@{
    ViewBag.Title = "Manage Product";
}
<h2>@ViewBag.Title</h2>
<div ng-controller="productController">
    <div class="row">
        <div id="createProductForm" class="modal fade" tabindex="-1" data-keyboard="false" data-backdrop="static">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">
                            ×
                        </button>
                        <h4 class="modal-title">Create New Product</h4>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="form-group">
                                <label class="col-md-2 control-label">Display Name</label>
                                <input class="form-control" type="text" placeholder="Display Name" />
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label">Category</label>
                                <select ng-model="selectedCategory" ng-options="category.DisplayName for category in categories">
                                    <option value="">Select</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label">Unit Price</label>
                                <input class="form-control" placeholder="Unit Price" />
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label">Is Active</label>
                                <input type="checkbox" />
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary button button4">Save</button>
                        <button type="button" class="btn btn-primary button button4" ng-click="closeForm('createProductForm')">Close</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-12">
            <input type="text" ng-model="productFilter.Product" placeholder="Search product" />
            <select ng-model="productFilter.Category" ng-options="category.DisplayName for category in categories">
                <option value="">Select</option>
            </select>
            <button ng-click="showCreateForm()">Add Product</button>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Display Name</th>
                        <th>Category</th>
                        <th>Unit Price</th>
                        <th>Is Active</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="product in products | searchFor: productFilter">
                        <td>{{ product.DisplayName }}</td>
                        <td>{{ product.Category.DisplayName }}</td>
                        <td>{{ product.UnitPrice }}</td>
                        <td>{{ product.IsActive }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script type="text/javascript" src="~/Scripts/controllers/productController.js"></script>